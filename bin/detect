#!/usr/bin/env bash
# bin/detect <build-dir>

set -x

echo 'stuff 1'

if [[ -f $BUILD_DIR/.mono ]]; then
  source $BUILD_DIR/.mono
fi

if [ -z ${SLN+x} ]; then
  # find a solution file
  SLN=$(find . -maxdepth 1 -iname "*.sln")
fi

echo 'stuff'
echo $SLN

if [ $( echo "${SLN}" | wc -l ) -gt 1 ]; then
    echo ".NET"
    exit 0
else
    exit 1
fi
